  {
    "name": "Extensao do Troxao",
    "version": "1.0",
    "description": "Build an Extension!",
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["main.js"]
      }
    ],
    "background": {
      "scripts": [
        "background.js"
      ]
    },
    "browser_action": {
      "default_icon": "icon.png",
      "default_popup": "popup.html"
    },
    "manifest_version": 2
  }